<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp">
                <RelativeLayout
                    android:background="#0099cc"
                    android:layout_width="match_parent"
                    android:layout_height="88dp">
                    <ImageView
                        android:layout_marginLeft="38dp"
                        android:id="@+id/sli_image_Mytouxiang"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <TextView
                        android:layout_marginLeft="28dp"
                        android:textSize="30sp"
                        android:id="@+id/sli_text_MyQQName"
                        android:text="qqName"
                        android:layout_toRightOf="@id/sli_image_Mytouxiang"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                   android:id="@+id/sli_Relati_touyihang"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:background="#ccccff">

                    <TextView
                        android:id="@+id/sliding_text_gengduo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"

                        android:layout_marginTop="5dp"
                        android:text="更多登录方式 ＞" />

                    <ImageButton
                        android:id="@+id/sliding_image_qqlogin"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/sliding_text_gengduo"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"
                        android:src="@mipmap/qqicon_login_profile_normal" />

                    <ImageButton
                        android:id="@+id/sliding_image_cellogin"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/sliding_text_gengduo"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"
                        android:src="@mipmap/cellphoneicon_login_profile_normal" />
                </RelativeLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/sliding_linear_shoucang"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="28dp"
                    android:src="@mipmap/favor_on_normal" />

                <TextView
                    android:id="@+id/sliding_text_shoucang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text=" 收藏"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sliding_linear_huodong"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="28dp"
                    android:src="@mipmap/_profile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text=" 活动"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sliding_linear_woyaobaoliao"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="28dp"
                    android:src="@mipmap/munion_user_icon" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="我要爆料"
                    android:textSize="25sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"></View>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/sli_lin_lixian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/downloadicon_leftdrawer_pressed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="离线下载" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sli_lin_yejian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sli_image_yejian"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/daymode_popover" />

                    <TextView
                        android:id="@+id/sli_text_yejian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="夜间模式" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sli_lin_shezhi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/settingicon_leftdrawer_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="设置" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/jianbianse" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sliding_linear_wodehuati"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:src="@mipmap/noticeable" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="我的话题"
            android:textSize="25sp" />
    </LinearLayout>


</LinearLayout>